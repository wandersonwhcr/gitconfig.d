[core]
    sshCommand = ssh -i ~/.ssh/git

[commit]
    verbose = true

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[alias]
    again = commit --amend --reset-author --no-edit
    empty = commit --allow-empty
    trash = reset HEAD~1 --hard

[include]
    path = ~/.gitconfig.d/local.gitconfig
