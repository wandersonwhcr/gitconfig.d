[core]
    sshCommand = ssh -i ~/.ssh/git

[commit]
    verbose = true

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[alias]
    # commit
    empty  = commit --allow-empty
    reword = commit --amend
    oops   = commit --amend --reset-author --no-edit
    # uncommit
    uncommit = reset --soft HEAD~1

[include]
    path = ~/.gitconfig.d/local.gitconfig
